root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.proto]
indent_size = 2

[*.tf]
indent_size = 2

[*.tmpl]
indent_size = 2

[*.js]
indent_size = 2
block_comment_start = /*
block_comment_end = */

[*.html]
indent_size = 2

[*.sh]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.diff]
indent_size = 1
